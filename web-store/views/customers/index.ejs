<h2 class="page-header">Search Customers</h2>
<form action="/customers" method="GET">
    <div class="form-item">
        <label>Name</label>
        <input type="text" name="lastName" value="<%= searchOptions.lastName %> ">
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<br>

<table class="styled-table centered-container">
    <thead>
        <tr>
            <th>Card Number</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Date of Birth</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i = 0; i < customers.length; i++) { %>
            <div>
                <tr>
                    <td> <%= customers[i].cardNumber %> </td>
                    <td> <%= customers[i].lastName %> </td>
                    <td> <%= customers[i].firstName %> </td>
                    <td> <%= customers[i].dateOfBirth %> </td>
                </tr>
            </div>
        <% } %>
    </tbody>
</table>